#include <iostream>
using namespace std;

void luas()
{
	int panjang, lebar, luas;
	cout<<"Nilai Panjang: ";
	cin>>panjang;
	cout<<"Nilai Lebar: ";
	cin>>lebar;

	luas=panjang*lebar;

	cout<<"Luas Persegi Panjang= "<<luas<<endl;
	
	system("pause");
	system("cls");
	
}

void keliling()
{
	int panjang, lebar, keliling;
	cout<<"Nilai Panjang: ";
	cin>>panjang;
	cout<<"Nilai Lebar: ";
	cin>>lebar;

	keliling= 2*(panjang+lebar);

	cout<<"Keliling Persegi Panjang adalah "<<keliling<<endl;

	system("pause");
	system("cls");
}

void main()
{
	char pilih;

	MENU:;
	cout<<"MENU Persegi Panjang"<<endl;
	
	cout<<"1.Menghitung Luas"<<endl;
	cout<<"2.Menghitung Keliling"<<endl;
	cout<<"3.Selesai"<<endl;
	cout<<"Pilih Nomer Menu:"<<endl;
	cin>>pilih;
	cout<<endl;
	system("cls");

	if (pilih=='1')
	{
		luas();
	}
	else if (pilih=='2')
	{
		keliling();
	}
	else if (pilih=='3')
	{
		exit(0);
	}
	else
		cout<<"Tidak terdapat di Menu"<<endl;
goto MENU;

}
